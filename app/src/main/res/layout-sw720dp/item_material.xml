<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >
    
        <Spinner 
            android:id="@+id/spinner"
            android:layout_width="300dp"
            android:layout_height="wrap_content">
        </Spinner>
        
       <RadioGroup 
           android:id="@+id/radioGroup"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="horizontal">
           
           <RadioButton 
               android:id="@+id/rdbCompany"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Company"/>
           
           <RadioButton 
               android:id="@+id/rdbVendor"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Vendor"/>
           
       </RadioGroup>
       
       <EditText 
           android:id="@+id/edtChargable"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:hint="Chargable Quantitiy"/>
        
 	 <EditText 
           android:id="@+id/edtNonChargable"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:hint="Non Chargable Quantitiy"/>
 	 
 	 <ImageButton
        android:id="@+id/imgBtnExpiryDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/icon_callendar" />
 	 
 	 <ImageButton
        android:id="@+id/imgBtnReplacedExpiryDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/icon_callendar" />

</LinearLayout>
