<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:background="@drawable/table_background"
    android:orientation="vertical"
    android:paddingBottom="5dp" >

    <RelativeLayout
        android:id="@+id/rlaLayoutDetails"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/banner_clamping"
        android:paddingLeft="10dp" >

        <TextView
            android:id="@+id/lblDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="@string/header_customer_status_Eng"
            android:textSize="18sp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/llleftpanel"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/rlaLayoutDetails"
        android:layout_marginLeft="2dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:background="@drawable/table_partition_horizontal"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="vertical"
            android:paddingRight="10dp"
            android:paddingTop="5dp" >

            <ImageView
                android:id="@+id/lbldetailContractor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lbl_operational_status_Eng"
                android:background="@drawable/icon_operational" />
        </LinearLayout>

         <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:background="@drawable/table_partition_horizontal"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="vertical"
            android:paddingRight="10dp"
            android:paddingTop="5dp" >

            <ImageView
                android:id="@+id/imgTempDisconnected"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lbl_temp_disconnected_status_Eng"
                android:background="@drawable/icon_temp_disconnect" />
        </LinearLayout>

       <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:background="@drawable/table_partition_horizontal"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="vertical"
            android:paddingRight="10dp"
            android:paddingTop="5dp" >

            <ImageView
                android:id="@+id/imgForceDisconnected"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lbl_force_disconnected_status_Eng"
                android:background="@drawable/icon_force_disconnect" />
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/ivmiddlepanel"
        android:layout_width="3dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/llleftpanel"
        android:layout_below="@+id/rlaLayoutDetails"
        android:layout_toRightOf="@+id/llleftpanel"
        android:background="@drawable/table_partition_vertical" />

    <LinearLayout
        android:id="@+id/llrightpanel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rlaLayoutDetails"
        android:layout_toRightOf="@+id/ivmiddlepanel"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="55dp"
            android:background="@drawable/table_partition_horizontal"
            android:orientation="vertical"
            android:paddingLeft="2dp"
            android:paddingTop="5dp" >

            <TextView
                android:id="@+id/txtOperational"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="left|center"
                android:textColor="@color/black"
                android:layout_marginLeft="15dp"
                 android:text="@string/lbl_operational_status_Eng"
                android:textSize="16sp" />
        </LinearLayout>
        
   
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="55dp"
            android:background="@drawable/table_partition_horizontal"
            android:orientation="vertical"
            android:paddingLeft="2dp"
            android:paddingTop="5dp" >

            <TextView
                android:id="@+id/txtTempDisconnected"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="left|center"
                android:textColor="@color/black"
                android:layout_marginLeft="15dp"
                 android:text="@string/lbl_temp_disconnected_status_Eng"
                android:textSize="16sp" />
        </LinearLayout>
        


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="55dp"
            android:background="@drawable/table_partition_horizontal"
            android:orientation="vertical"
            android:paddingLeft="2dp"
            android:paddingTop="5dp" >

            <TextView
                android:id="@+id/txtForceDisconnected"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="left|center"
                android:layout_marginLeft="15dp"
                android:textColor="@color/black"
                android:text="@string/lbl_force_disconnected_status_Eng"
                android:textSize="16sp" />
        </LinearLayout>
        
        </LinearLayout>
        
   
    
    </RelativeLayout>