<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/form_background_grey"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rlaLayoutServerIP"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/banner_clamping"
        android:paddingLeft="20dp" >

        <TextView
            android:id="@+id/lblAdminService"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="@string/header_AdminService_Ip"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="17sp"
            android:textStyle="bold" />
    </RelativeLayout>

<!--     <TextView -->
<!--         android:id="@+id/txtAdminService" -->
<!--         android:layout_width="fill_parent" -->
<!--         android:layout_height="wrap_content" -->
<!--         android:layout_margin="20dp" -->
<!--         android:text="@string/help_text" -->
<!--         android:textAppearance="?android:attr/textAppearanceLarge" -->
<!--         android:textColor="@color/black" -->
<!--         android:textSize="18dp" /> -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/lblSettingIP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:paddingLeft="20dp"
            android:gravity="center"
            android:text="@string/title_settingURL"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtSettingIP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_weight="0.20"
            android:background="@drawable/textbox"
            android:ems="10"
            android:singleLine="true"
            android:padding="15dp"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnSettingIp"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_margin="20dp"
            android:background="@drawable/save_next_button"
            android:gravity="center"
            android:text="@string/title_testConnection"
            android:textSize="15sp" />
    </LinearLayout>
    
    <RelativeLayout
        android:id="@+id/rlaLayoutPassSetting"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/banner_clamping"
        android:paddingLeft="20dp" >

        <TextView
            android:id="@+id/lblPassSetting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="@string/header_AdminService_PassUnlock"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="16sp"
            android:textStyle="bold" />

    </RelativeLayout>
    
     <RelativeLayout
        android:id="@+id/rlaLayoutUserList"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:paddingLeft="20dp" >
        
          <Button
            android:id="@+id/btnClearData"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_margin="20dp"
            android:background="@drawable/save_next_button"
            android:text="@string/header_AdminService_PassUnlock"
            />
        
       <ListView
	        android:id="@+id/list"
	        android:cacheColorHint="#00000000"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" 
	        android:layout_below="@+id/btnClearData">
        </ListView>
        
    </RelativeLayout>

</LinearLayout>