         <Button
            android:id="@+id/btnOk"
            android:layout_width="80dp"
            android:layout_height="40dp"           
            android:layout_marginRight="5dp"            
            android:textSize="20sp"            
            android:background="@drawable/save_next_button"
            android:text="@android:string/ok" />
        
